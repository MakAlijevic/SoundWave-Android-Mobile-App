<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hello_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:ignore="MissingClass">

        <TextView
            android:id="@+id/textView"
            android:layout_width="258dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/play"
            android:gravity="center"
            android:text="SoundWave"
            android:textColor="#FFFFFF"
            android:textSize="44sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/play"
            android:text="Featured"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="284dp"
            android:fontFamily="@font/play"
            android:text="Recommended for you"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleViewFlipper" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/play"
            android:text="Welcome back "
            android:textColor="#8F8F8F"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ViewFlipper
            android:id="@+id/simpleViewFlipper"
            android:layout_width="331dp"
            android:layout_height="143dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="39dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="276dp"

                android:layout_height="97dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="135dp"
                app:cardBackgroundColor="#8C000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/album1"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="1dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/asitwas"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/artist1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Harry Styles"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/album1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="As It Was"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/album1"
                        app:layout_constraintTop_toBottomOf="@+id/artist1" />


                    <ImageButton
                        android:id="@+id/playButton"
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="21dp"
                        android:background="#00000000"
                        android:src="@android:drawable/ic_media_play"
                        app:backgroundTintMode="add"
                        app:layout_constraintBottom_toBottomOf="@+id/album1"
                        app:layout_constraintEnd_toEndOf="@+id/album1"
                        app:layout_constraintStart_toStartOf="@+id/album1"
                        app:layout_constraintTop_toTopOf="@+id/album1" />

                    <EditText
                        android:id="@+id/duration"
                        android:layout_width="143dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="02:46"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album1"
                        app:layout_constraintTop_toBottomOf="@+id/title1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="276dp"
                android:layout_height="97dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="135dp"
                android:layout_marginRight="135dp"
                app:cardBackgroundColor="#8D000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/duration2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="03:05"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album2"
                        app:layout_constraintTop_toBottomOf="@+id/title2" />

                    <ImageView
                        android:id="@+id/album2"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="1dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/kendrick"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/artist2"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Kendrick L"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/album2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="N95"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/album2"
                        app:layout_constraintTop_toBottomOf="@+id/artist2" />

                    <ImageButton
                        android:id="@+id/playButton2"
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="21dp"
                        android:background="#00000000"
                        android:src="@android:drawable/ic_media_play"
                        app:backgroundTintMode="add"
                        app:layout_constraintBottom_toBottomOf="@+id/album2"
                        app:layout_constraintEnd_toEndOf="@+id/album2"
                        app:layout_constraintStart_toStartOf="@+id/album2"
                        app:layout_constraintTop_toTopOf="@+id/album2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="276dp"
                android:layout_height="97dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="135dp"
                android:layout_marginRight="135dp"
                app:cardBackgroundColor="#8D000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/duration3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#00000000"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="03:05"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album3"
                        app:layout_constraintTop_toBottomOf="@+id/title3" />

                    <ImageView
                        android:id="@+id/album3"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="1dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/edsheeran"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/artist3"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Ed Sheeran"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/album3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="The Joker And The Q..."
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/album3"
                        app:layout_constraintTop_toBottomOf="@+id/artist3" />

                    <ImageButton
                        android:id="@+id/playButton3"
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="21dp"
                        android:background="#00000000"
                        android:src="@android:drawable/ic_media_play"
                        app:backgroundTintMode="add"
                        app:layout_constraintBottom_toBottomOf="@+id/album3"
                        app:layout_constraintEnd_toEndOf="@+id/album3"
                        app:layout_constraintStart_toStartOf="@+id/album3"
                        app:layout_constraintTop_toTopOf="@+id/album3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>



        </ViewFlipper>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginTop="299dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/ic_next_4_icon_icons_com_64988"
            android:onClick="nextView"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/simpleViewFlipper"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_next_4_icon_icons_com_64988"
            android:onClick="prevView"
            android:rotationY="-180"
            android:text="Button"
            app:layout_constraintEnd_toStartOf="@+id/simpleViewFlipper"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>