<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Registration2Activity">

    <Button
        android:id="@+id/button4"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="217dp"
        android:fontFamily="@font/play"
        android:onClick="RegisterButton"
        android:shadowColor="#000000"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#16506A"
        android:textSize="20sp"
        app:backgroundTint="#6C6D81"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/female1"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#154D7A"
        app:strokeColor="#FFFEFE" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="264dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/play"
        android:gravity="center"
        android:text="Set up Profile"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/play"
        android:gravity="center"
        android:text="CHOOSE YOUR AVATAR"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/female1"
        android:layout_width="158dp"
        android:layout_height="117dp"
        android:layout_marginTop="44dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:tag="@drawable/female1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:srcCompat="@drawable/female1" />

</androidx.constraintlayout.widget.ConstraintLayout>